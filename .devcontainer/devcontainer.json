{
  "name": "riscv-core",
  "image": "ghcr.io/pedropcventura/riscv-dev_tools:yosys-fixed",
  "remoteUser": "dev",

  "workspaceFolder": "/work",
  "workspaceMount": "source=${localWorkspaceFolder},target=/work,type=bind,consistency=cached",

  "containerEnv": {
    "DISPLAY": "host.docker.internal:0"
  },
  "runArgs": [
    "-e", "DISPLAY=host.docker.internal:0",
    "-v", "/var/run/docker.sock:/var/run/docker.sock"   // talk to host Docker
  ],

  "features": {},   // <-- remove the docker-outside-of-docker feature

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.makefile-tools",
        "teros-technology.teroshdl",
        "ms-python.black-formatter"
      ]
    }
  }
}
